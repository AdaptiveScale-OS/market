{
    "Name": "Cassandra | Single Node",
    "Version": "3.6",
    "Title": "Cassandra | Single Node",
    "Heading": "Cassandra | Single Node",
    "Description": "Cassandra NoSQL Database with a single node (pseudo-cluster) storage technology ! To check whether the APP BUDNLE installation process went well you could use <cqlsh> in the commandline and connect to the database and query as explaiend in <http://cassandra.apache.org/doc/latest/getting_started/querying.html> !",
    "Logo": "img/cassandra.png",
    "Role": [
        {
            "Type": "CASS-Node",
            "Name": "CASS-Node",
            "Description": "Cassandra Single Node NoSQL DATABASE.",
            "Servers": {
                "Min": 1,
                "Max": 1
            },
            "Requirements": {
                "Architecture": "x86_64",
                "Cores": 2,
                "Ram": 4,
                "Storage": 2048
            },
            "Tasks" : [ 
				{
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/install_java_prequisite.sh",
                    "tag" : "SETUP-JAVA-8-OPEN-JDK"
                },
				{
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/install_start_cassandra.sh",
                    "tag" : "INSTALL-START-CASSANDRA"
                }
            ]
        }
    ]
}